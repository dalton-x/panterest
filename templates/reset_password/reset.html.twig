{% extends 'layouts/base.html.twig' %}

{% block title 'Création du nouveau mot de passe' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5 mb-3 text-center">Création du nouveau mot de passe</h1>

            {{ form_start(resetForm) }}
                {{ form_row(resetForm.newPassword) }}
                <button type="submit" class="btn btn-primary btn-lg btn-block">Mettre à jour </button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
