{% extends '/layouts/base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="text-center mt-5 mb-3">Veuillez vous connecter</h1>
        <p class="text-center text-muted mb-5">Vos épingles n'attendent que vous !!</p>
        <form method="post">
            {% if error %}
            <div class="alert alert-error rounded mb-3" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-group">
                <label for="email" class="mt-3">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required
                    autofocus>
            </div>
            <div class="form-group">
                <label for="password" class="mt-3">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">
                            Rester connecter ?
                        </label>
                    </div>
                </div>
                <a href="#">Mot de passe oublié ?</a>
            </div>

            <button class="btn btn-lg btn-block btn-primary mt-3" type="submit">
                Sign in
            </button>

            <p class="mt-5 mb-3 text-center text-muted">
                Pas de compte ?
                <a href="#">Créé un compte</a>
            </p>
        </form>
    </div>
</div>

{% endblock %}